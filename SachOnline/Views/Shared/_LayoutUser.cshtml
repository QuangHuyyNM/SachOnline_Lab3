<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <title>BOOTSTRAP </title>
    <style type="text/css">
        .imgbook {
            width: 100px;
        }

            .imgbook:hover {
                transform: scale(0,9);
                cursor: pointer;
            }

        .imgsachbannhieu {
            width: 100px;
        }

        .list-group {
            display: block;
            width: auto;
        }

        .menu {
            padding-top: 70px;
            width: 330px;
            float: left;
        }
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #0094ff; /* Đổi màu nền theo ý muốn */
            padding: 10px 20px; /* Điều chỉnh padding theo ý muốn */
        }

            .navbar a {
                color: #4cff00; /* Màu chữ cho các liên kết */
                text-decoration: none; /* Loại bỏ gạch chân cho các liên kết */
                margin: 0 10px; /* Khoảng cách giữa các liên kết */
            }

        .tes {
            background-color: red;
        }
    </style>
</head>
<body>
    <div class="navbar">
        <a href="/">Trang chủ</a>
        <a href="@Url.Action("DangKy", "User")">Đăng ký</a>
        <a href="@Url.Action("DangNhap", "User")">Đăng Nhập</a>
        <a href="/san-pham">Sản phẩm</a>
    </div>
    <div class="menu">
        @Html.Action("ChuDePartial", "SachOnline")
        @Html.Action("NhaXuatBanPartial", "SachOnline")
    </div>
    <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
        @RenderBody()
    </div>

</body>
</html>
